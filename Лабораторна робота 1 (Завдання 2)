#Задаю функцію для обчислення  
def fibonacci(n):  
    fib_row = [0, 1] #Перші 2 числа ряду 
    for i in range(2, n): #Послідовність від 2-го елементу до n-го (тобто 8-го)  
        fib_row.append(fib_row[-1] + fib_row[-2]) #Береться сума двох останніх чисел у списку: fib_row[-1] — останній елемент списку, а fib_row[-2] — передостанній (адже кожне наступне число= сумі двох попередніх). Результат додається до кінця списку  
    return fib_row  

n = 8  
fib_row = fibonacci(n)  
print("Числа ряду Фібоначчі:", fib_row)  
print("Сума:", sum(fib_row)) 
